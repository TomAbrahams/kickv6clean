<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.thomas.cskickitappv2.CurrentPlan">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="377dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent">

        <TextView
            android:id="@+id/tvlblEventOne"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Event 1"
            android:textColor="@color/AliceBlue"
            android:background="@color/Red"/>

        <TextView
            android:id="@+id/tvEventOne"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="Click me to start!" />

        <TextView
            android:id="@+id/tvLblEventTwo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Event 2"
            android:textColor="@color/AliceBlue"
            android:background="@color/Green"/>

        <TextView
            android:id="@+id/tvEventTwo"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="Click me to start!" />

        <TextView
            android:id="@+id/tvLblEventThree"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Event 3"
            android:textColor="@color/AliceBlue"
            android:background="@color/Blue"/>

        <TextView
            android:id="@+id/tvEventThree"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="Click me to start!" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Code for the Event" />

        <EditText
            android:id="@+id/etPlanCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Code" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="366dp"
        android:layout_height="108dp"
        android:orientation="horizontal"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent">

        <Button
            android:id="@+id/btnJoinPlan"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/holo_blue_light"
            android:text="Back"
            android:textAllCaps="false" />
        <Space
            android:layout_width="2dp"
            android:layout_height="match_parent" />


        <Button
            android:id="@+id/btnReady"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:background="@android:color/holo_orange_dark"

            android:text="Create Plan" />

        <Space
            android:layout_width="2dp"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/btnSavePlan"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:background="@android:color/holo_purple"
            android:textColor="@android:color/white"
            android:text="Save Plan" />
    </LinearLayout>


</android.support.constraint.ConstraintLayout>
