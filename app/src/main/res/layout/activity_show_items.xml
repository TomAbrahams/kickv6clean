<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_show_items"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.thomas.cskickitappv2.showItems">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:text="Host Email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvHost" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/etEmailTxt" />

        <TextView
            android:text="Search Code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvSearchCode" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/etSearchText" />

        <Button
            android:text="Search with Code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/LimeGreen"
            android:textAllCaps="false"
            android:id="@+id/buttSearch" />
        <Space
            android:layout_width="match_parent"
            android:layout_height="7dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <TextView
                    android:text="Event 1"
                    android:layout_width="285dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvEvent1" />

                <TextView
                    android:id="@+id/tvEventNum1"
                    android:layout_width="285dp"
                    android:layout_height="75dp"
                    android:text="First Event" />

                <TextView
                    android:text="Event 2"
                    android:layout_width="285dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvEvent2" />

                <TextView
                    android:id="@+id/tvEventNum2"
                    android:layout_width="285dp"
                    android:layout_height="75dp"
                    android:text="Second Event" />

                <TextView
                    android:text="Event 3"
                    android:layout_width="285dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvEvent3" />

                <TextView
                    android:id="@+id/tvEventNum3"
                    android:layout_width="285dp"
                    android:layout_height="75dp"
                    android:text="Third Event" />

                <Button
                    android:id="@+id/btnBackToMain"
                    android:layout_width="80dp"
                    android:layout_height="35dp"
                    android:textAllCaps="false"
                    android:background="@color/Aqua"
                    android:text="Back" />


            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/btnMapEvent1"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:background="@color/colorPrimaryDark"
                    android:text="Map Event 1"
                    android:textAllCaps="false"
                    android:textColor="@color/common_google_signin_btn_text_dark_default" />

                <Button
                    android:id="@+id/btnMapEvent2"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:background="@android:color/holo_red_dark"
                    android:text="Map Event 2"
                    android:textAllCaps="false"
                    android:textColor="@color/common_google_signin_btn_text_dark_default" />

                <Button
                    android:id="@+id/btnMapEvent3"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:background="@android:color/holo_green_dark"
                    android:fontFamily="sans-serif-medium"
                    android:text="Map Event 3"
                    android:textAllCaps="false"
                    android:textColor="@color/common_google_signin_btn_text_dark_default" />

                <Button
                    android:id="@+id/btnChat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Chat"
                    android:textAllCaps="false"
                    android:background="@color/PaleVioletRed"
                    />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
